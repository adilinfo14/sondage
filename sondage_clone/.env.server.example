PORT=5050
FLASK_DEBUG=0
HOST=0.0.0.0

# Prod serveur/docker
SONDAGE_DB_PATH=/app/data/sondage.db
SONDAGE_SECRET_KEY=replace-with-very-long-random-secret
SONDAGE_COOKIE_SECURE=1
SONDAGE_COOKIE_SAMESITE=Strict
SONDAGE_SESSION_TIMEOUT_MINUTES=720

# Auth par comptes utilisateurs
SONDAGE_AUTH_ENABLED=1
# En production, ouvre temporairement à 1 pour créer le 1er compte, puis remets à 0
SONDAGE_AUTH_ALLOW_REGISTRATION=0
# Promote cet email en admin au démarrage (optionnel)
SONDAGE_BOOTSTRAP_ADMIN_EMAIL=

# SMTP OVH (choisir un mode)
# Option A: TLS STARTTLS (souvent recommandé)
SMTP_HOST=smtp.mail.ovh.net
SMTP_PORT=587
SMTP_USE_TLS=1
SMTP_USE_SSL=0

# Option B: SSL direct
# SMTP_HOST=ssl0.ovh.net
# SMTP_PORT=465
# SMTP_USE_TLS=0
# SMTP_USE_SSL=1

SMTP_USER=contact@adil-tsoulikamal.com
SMTP_PASS=replace-with-your-password-or-app-password
SMTP_FROM_EMAIL=contact@adil-tsoulikamal.com
SMTP_FROM_NAME=Sondage-noschoixpourvous
FEEDBACK_TO_EMAIL=contact@adil-tsoulikamal.com
