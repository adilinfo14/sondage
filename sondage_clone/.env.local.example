PORT=5050
FLASK_DEBUG=1
HOST=0.0.0.0

# Dev local Windows/Linux: laisse la DB dans le dossier projet
SONDAGE_DB_PATH=./sondage.db
SONDAGE_SECRET_KEY=replace-with-local-dev-secret
SONDAGE_COOKIE_SECURE=0
SONDAGE_COOKIE_SAMESITE=Lax
SONDAGE_SESSION_TIMEOUT_MINUTES=720

# Auth par comptes utilisateurs
SONDAGE_AUTH_ENABLED=1
SONDAGE_AUTH_ALLOW_REGISTRATION=1
# Promote cet email en admin au démarrage (optionnel)
SONDAGE_BOOTSTRAP_ADMIN_EMAIL=

# SMTP OVH - profil recommandé TLS 587
SMTP_HOST=smtp.mail.ovh.net
SMTP_PORT=587
SMTP_USER=contact@adil-tsoulikamal.com
SMTP_PASS=replace-with-your-password-or-app-password
SMTP_USE_TLS=1
SMTP_USE_SSL=0
SMTP_FROM_EMAIL=contact@adil-tsoulikamal.com
SMTP_FROM_NAME=sondage.noschoixpourvous.com
